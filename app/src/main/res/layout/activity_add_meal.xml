<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>

        <!-- Add Meal Title -->
        <TextView
            android:id="@+id/textViewAddMealTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Meal"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <!-- Food Scanner Button -->
        <Button
            android:id="@+id/btnFoodScanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Scanner"
            android:layout_below="@id/btnBack"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true"/>

        <!-- New Meal Button -->
        <Button
            android:id="@+id/btnNewMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Meal"
            android:layout_below="@id/btnBack"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_alignParentStart="true"/>

        <!-- Line Separator -->
        <View
            android:id="@+id/lineSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/btnFoodScanner"
            android:layout_marginTop="16dp"/>

        <!-- Title: Select Category -->
        <TextView
            android:id="@+id/textViewSelectCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Category"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@id/lineSeparator"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <!-- Buttons for Meal Categories -->
        <Button
            android:id="@+id/btnCategory1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewSelectCategory"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Mamak Cuisine" />

        <Button
            android:id="@+id/btnCategory2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnCategory1"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="McDonalds" />

        <Button
            android:id="@+id/btnCategory3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnCategory2"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Chinese Cuisine"/>

        <Button
            android:id="@+id/btnCategory4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnCategory3"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Malay Cuisine"/>

        <Button
            android:id="@+id/btnCategory5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnCategory4"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Indian Cuisine"/>

    </RelativeLayout>

</ScrollView>
